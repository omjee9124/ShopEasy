    {
      "name": "Complete Shopping Flow",
      "item": [
        {
          "name": "1. Login as Test User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.token);",
                  "    console.log('‚úÖ Step 1: Login successful, token saved');",
                  "} else {",
                  "    console.log('‚ùå Step 1: Login failed');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
