            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const carts = pm.response.json();",
                  "    const activeCart = carts.find(cart => cart.status === 'active');",
                  "    if (activeCart) {",
                  "        console.log('‚úÖ Step 4: Cart contains', activeCart.items?.length || 0, 'items');",
                  "    } else {",
                  "        console.log('‚ö†Ô∏è Step 4: No active cart found');",
                  "    }",
                  "} else {",
                  "    console.log('‚ùå Step 4: Failed to get cart contents');",
                  "}"
                ]
              }
            }
