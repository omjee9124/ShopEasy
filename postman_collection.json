          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const items = pm.response.json();",
                  "    console.log('‚úÖ Step 2: Found', items.length, 'items');",
                  "    if (items.length > 0) {",
                  "        pm.collectionVariables.set('first_item_id', items[0].id);",
                  "        pm.collectionVariables.set('second_item_id', items[1]?.id || items[0].id);",
                  "    }",
                  "} else {",
                  "    console.log('‚ùå Step 2: Failed to get items');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/items",
              "host": ["{{base_url}}"],
              "path": ["items"]
            }
