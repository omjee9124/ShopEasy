          "response": []
        },
        {
          "name": "3. Add Items to Cart",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const cart = pm.response.json();",
                  "    pm.collectionVariables.set('cart_id', cart.id);",
                  "    console.log('‚úÖ Step 3: Items added to cart ID:', cart.id);",
                  "} else {",
                  "    console.log('‚ùå Step 3: Failed to add items to cart');",
                  "}"
                ]
